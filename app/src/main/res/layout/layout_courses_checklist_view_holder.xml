<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/layout_courses_checklist_view_holder_textview_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="?attr/colorOnPrimaryDark"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/layout_courses_checklist_view_holder_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="0"
        android:textSize="20sp"
        app:buttonTint="?attr/colorOnPrimaryDark" />

</LinearLayout>