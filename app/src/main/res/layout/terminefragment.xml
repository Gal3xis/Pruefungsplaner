<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/termineFragment_Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="45dp"
    android:background="?attr/colorBackground"
    android:orientation="vertical">


    <TextView
        android:id="@+id/currentPeriode"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_timespan"
        android:backgroundTint="?attr/colorPrimary"
        android:maxLines="1"
        android:text="@string/currentPeriod"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:autoSizeTextType="uniform"
        android:textColor="?attr/colorOnPrimary"
        android:outlineProvider="bounds"
        android:elevation="30dp"
        android:textSize="20sp" />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/termineFragment_swiperefres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:scrollbars="vertical"
            tools:listitem="@layout/termine">


        </androidx.recyclerview.widget.RecyclerView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        android:id="@+id/termineFragment_legend"
        layout="@layout/layout_status_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        />
</RelativeLayout>