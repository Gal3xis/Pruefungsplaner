<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    >

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_color_border"
        android:backgroundTint="?attr/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="?attr/colorOnPrimaryDark"
        android:textSize="20sp"
        tools:text="04.07.2022" />

    <LinearLayout
        android:id="@+id/examInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:background="@drawable/rounded_color_border"
        android:backgroundTint="?attr/colorPrimaryLight"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/radiobutton_off_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/moduleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimaryLight"
                android:textSize="20sp"
                tools:text="Mathematik A" />

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimaryLight"
                android:textSize="14sp"
                tools:text=" Uhrzeit:08:00" />


        </LinearLayout>

        <ImageView
            android:id="@+id/favoriteIcon"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_input_add"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/examInfoLayout"
        android:visibility="gone"
        android:background="@drawable/button_rounded_corners"
        android:backgroundTint="?attr/colorPrimaryDark"
        tools:visibility="visible"
        >

    <TextView
        android:id="@+id/txtSecondscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnPrimaryDark"/>
    </LinearLayout>
</RelativeLayout>
