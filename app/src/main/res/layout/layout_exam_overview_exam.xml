<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/layout_exam_overview_exam_textview_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_corners_strong"
        android:backgroundTint="?attr/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="?attr/colorOnPrimaryDark"
        android:textSize="20sp"
        tools:text="04.07.2022" />

    <LinearLayout
        android:id="@+id/layout_exam_overview_exam_layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_exam_overview_exam_textview_date"
        android:background="@drawable/background_rounded_corners_strong"
        android:backgroundTint="?attr/colorPrimaryLight"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layout_exam_overview_exam_imageview_status_icon"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/radiobutton_off_background"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layout_exam_overview_exam_textview_module"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimaryLight"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/layout_exam_overview_exam_textview_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimaryLight"
                android:textSize="14sp"
                tools:text=" Uhrzeit:08:00" />


        </LinearLayout>

        <ImageView
            android:id="@+id/layout_exam_overview_exam_imageview_favorite_icon"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_input_add"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_exam_overview_exam_layout_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_exam_overview_exam_layout_info"
        android:visibility="gone"
        android:background="@drawable/background_rounded_corners_strong"
        android:backgroundTint="?attr/colorPrimaryDark"
        tools:visibility="visible"
        >

    <TextView
        android:id="@+id/layout_exam_overview_exam_textview_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnPrimaryDark"/>
    </LinearLayout>
</RelativeLayout>
