<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppTheme_1" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Theme1.colorPrimary</item>
        <item name="colorOnPrimary">@color/Theme1.colorOnPrimary</item>

        <item name="colorPrimaryDark">@color/Theme1.colorPrimaryDark</item>
        <item name="colorOnPrimaryDark">@color/Theme1.colorOnPrimaryDark</item>

        <item name="colorPrimaryLight">@color/Theme1.colorPrimaryLight</item>
        <item name="colorOnPrimaryLight">@color/Theme1.colorOnPrimaryLight</item>

        <item name="colorAccent">@color/Theme1.colorAccent</item>
        <item name="colorOnAccent">@color/Theme1.colorOnAccent</item>

        <item name="colorPrimaryText">@color/Theme1.colorPrimaryText</item>
        <item name="colorSecondaryText">@color/Theme1.colorSecondaryText</item>

        <item name="colorDivider">@color/Theme1.colorDivider</item>

        <item name="colorBackground">@color/Theme1.colorBackground</item>

        <item name="colorChecked">@color/Theme1.colorPrimary</item>
        <item name="colorUnchecked">@color/Theme1.colorAccent</item>
    </style>

    <style name="Theme.AppTheme_2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Theme2.colorPrimary</item>
        <item name="colorOnPrimary">@color/Theme2.colorOnPrimary</item>

        <item name="colorPrimaryDark">@color/Theme2.colorPrimaryDark</item>
        <item name="colorOnPrimaryDark">@color/Theme2.colorOnPrimaryDark</item>

        <item name="colorPrimaryLight">@color/Theme2.colorPrimaryLight</item>
        <item name="colorOnPrimaryLight">@color/Theme2.colorOnPrimaryLight</item>

        <item name="colorAccent">@color/Theme2.colorAccent</item>
        <item name="colorOnAccent">@color/Theme2.colorOnAccent</item>

        <item name="colorPrimaryText">@color/Theme2.colorPrimaryText</item>
        <item name="colorSecondaryText">@color/Theme2.colorSecondaryText</item>

        <item name="colorDivider">@color/Theme2.colorDivider</item>

        <item name="colorBackground">@color/Theme2.colorBackground</item>
    </style>

    <!-- Alert Dialog -->
    <style name="AlertDialog.Filter" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">?attr/colorPrimary</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!-- Style for negative button -->
    </style>

    <style name="AlertDialog.Filter.Spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/Theme1.colorPrimary</item>
    </style>

    <style name="AutoCompleteStyle">
        <item name="colorAccent">@color/Theme1.colorPrimary</item>
    </style>

    <style name="customAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="textColorAlertDialogListItem">?attr/colorOnPrimaryDark</item>
        <item name="android:textSize">20dp</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
