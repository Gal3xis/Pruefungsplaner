<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppTheme_1" parent="BaseTheme">
        <item name="themeName">@string/Theme1_ThemeName</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Theme1.colorPrimary</item>
        <item name="colorOnPrimary">@color/Theme1.colorOnPrimary</item>

        <item name="colorPrimaryDark">@color/Theme1.colorPrimaryDark</item>
        <item name="colorOnPrimaryDark">@color/Theme1.colorOnPrimaryDark</item>

        <item name="colorPrimaryLight">@color/Theme1.colorPrimaryLight</item>
        <item name="colorOnPrimaryLight">@color/Theme1.colorOnPrimaryLight</item>

        <item name="colorAccent">@color/Theme1.colorAccent</item>
        <item name="colorOnAccent">@color/Theme1.colorOnAccent</item>

        <item name="colorPrimaryText">@color/Theme1.colorPrimaryText</item>
        <item name="colorSecondaryText">@color/Theme1.colorSecondaryText</item>

        <item name="colorDivider">@color/Theme1.colorDivider</item>

        <item name="colorBackground">@color/Theme1.colorBackground</item>
        <item name="colorOnBackground">@color/Theme1.colorOnBackground</item>

        <item name="colorChecked">@color/Theme1.colorPrimary</item>
        <item name="colorUnchecked">@color/Theme1.colorAccent</item>

        <item name="actionMenuTextColor">@color/Theme1.colorOnPrimaryDark</item>

    </style>

    <style name="Theme.AppTheme_2" parent="BaseTheme">
        <item name="themeName">@string/Theme2_ThemeName</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Theme2.colorPrimary</item>
        <item name="colorOnPrimary">@color/Theme2.colorOnPrimary</item>

        <item name="colorPrimaryDark">@color/Theme2.colorPrimaryDark</item>
        <item name="colorOnPrimaryDark">@color/Theme2.colorOnPrimaryDark</item>

        <item name="colorPrimaryLight">@color/Theme2.colorPrimaryLight</item>
        <item name="colorOnPrimaryLight">@color/Theme2.colorOnPrimaryLight</item>

        <item name="colorAccent">@color/Theme2.colorAccent</item>
        <item name="colorOnAccent">@color/Theme2.colorOnAccent</item>

        <item name="colorPrimaryText">@color/Theme2.colorPrimaryText</item>
        <item name="colorSecondaryText">@color/Theme2.colorSecondaryText</item>

        <item name="colorDivider">@color/Theme2.colorDivider</item>

        <item name="colorBackground">@color/Theme2.colorBackground</item>
        <item name="colorOnBackground">@color/Theme2.colorOnBackground</item>

        <item name="actionMenuTextColor">@color/Theme2.colorOnPrimaryDark</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="frueherVorschlag">#f50</item>
        <item name="inDiskussion">#ff0</item>
        <item name="veroeffentlicht">#0a0</item>
        <item name="veraltet">#333</item>
        <item name="zukuenftigePlanung">#FFFFFF</item>
        <item name="defaultStatusColor">#000</item>
        <item name="spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
        <item name="isFavorit">#f00</item>
        <item name="isNotFavorit">#0f0</item>
    </style>

    <!-- Alert Dialog -->
    <style name="AlertDialog.Filter" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">?attr/colorPrimaryDark</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">?attr/colorOnPrimaryDark</item>
        <item name="android:textColor">?attr/colorOnPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!-- Style for negative button -->
    </style>


    <style name="OptionenFragment.Entry" parent="Base.CardView">
        <item name="android:background">@drawable/rounded_color_border</item>
        <item name="android:backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:textColor">?attr/colorOnPrimaryDark</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="AlertDialog.Filter.Spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:spinnerMode">dialog</item>
    </style>

    <style name="AlertDialog.Filter.CheckBox.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimaryDark</item>
    </style>

    <style name="AlertDialog.Filter.CheckBox.Box" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">?attr/colorOnPrimaryDark</item>
    </style>

    <style name="AlertDialog.Filter.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:backgroundTint">?attr/colorOnPrimaryDark</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:editTextColor">?attr/colorOnPrimaryDark</item>
    </style>
    <style name="ThemeOverlay.SearchView" parent="">
        <!-- Text color -->
        <item name="android:editTextColor">?attr/colorOnPrimaryDark</item>
    </style>
    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:editTextColor">?attr/colorOnPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.RatingBar" parent="Theme.AppCompat">
        <item name="android:progressTint">?attr/colorAccent</item>
        <item name="android:progressBackgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:secondaryProgressTint">?attr/colorPrimary</item>
    </style>

    <style name="AutoCompleteStyle">
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="customAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="textColorAlertDialogListItem">?attr/colorOnPrimaryDark</item>
        <item name="android:textSize">20dp</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="OptionenFragment"></style>

    <string name="Theme1_ThemeName">Green</string>
    <string name="Theme2_ThemeName">Blue</string>

</resources>
